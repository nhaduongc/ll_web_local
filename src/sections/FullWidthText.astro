---
import Container from "../components/Container.astro";

const { id = "" } = Astro.props;
---

<section class="py-14 bg-navy text-white text-center" id={id}>
  <Container>
    <div
      class="flex flex-col items-center space-y-[30px] text-center max-w-[1050px] mx-auto"
    >
      <slot name="header" />
      <slot name="lead" />
      <slot name="content" />
    </div>
  </Container>
</section>
